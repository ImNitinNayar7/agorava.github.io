---
layout: base
---
.row
  .span12
    .hero-unit.clearfix
      %img.hidden-phone{ :style=>"float:right; margin-left:20px;", :src=>"#{site.base_url}/images/logo.png"}
      %h1 Agorava
      %p The Social Framework
      
.row
  .span8
    %h2 News
    .well.last-posts
      %ul.nav.nav-list
        - for post in site.posts[0,5]
          %li
            %h4
              %a{:href=>post.url} #{post.title}
            Posted on 
            %span.date= post.date.strftime( '%b %d, %Y' )
          %li.divider
      %a.btn{:href=>"#{site.base_url}/news/"} Read more
      = partial( 'subscribe.html.haml' )
  .span4
    %h2 Status
    %p
      %a.btn{ :href=>"http://socializer.agorava.cloudbees.net/" } Demo &raquo;
      %a.btn{ :href=>"https://issues.jboss.org/browse/AGOVA" } JIRA &raquo;
      %a.btn{ :href=>"https://docs.jboss.org/author/display/AGOVA" } Doc &raquo;
      %a.btn{ :href=>"https://agorava.ci.cloudbees.com/" } Jenkins &raquo;

    %ul.well.nav.nav-list
      %li.nav-header Github Repositories
      %li
        %a{ :href=>"https://github.com/agorava/agorava-parent"} agorava-parent
      %li
        %a{ :href=>"https://github.com/agorava/agorava-core"} agorava-core
      %li
        %a{ :href=>"https://github.com/agorava/agorava-twitter"} agorava-twitter
      %li
        %a{ :href=>"https://github.com/agorava/agorava-facebook"} agorava-facebook
      %li
        %a{ :href=>"https://github.com/agorava/agorava-linkedin"} agorava-linkedin
      %li
        %a{ :href=>"https://github.com/agorava/agorava-socializer"} agorava-socializer
      %li
        %a{ :href=>"https://github.com/agorava/agorava.github.com"} agorava.github.com
    %p
    %p
      %a.twitter-follow-button{:href=>"https://twitter.com/AgoravaProj", :data=>{"show-count"=>"false", :size=>"large"}} Follow us on Twitter
    .well.last-tweets
      %ul.nav.nav-list.twitter-list
        %li.nav-header Last tweets
        #twitter_update_list
    %p

